<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.homefinder.ui.posts.PostsFragment"
        android:label="@string/posts"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_profile"
            app:destination="@id/nav_profile" />
    </fragment>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.homefinder.ui.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_login"
        android:name="com.example.homefinder.ui.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_nav_login_to_nav_signup"
            app:destination="@id/nav_signup" />
        <action
            android:id="@+id/action_nav_login_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_signup"
        android:name="com.example.homefinder.ui.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_nav_signup_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
</navigation>